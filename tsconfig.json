{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["core/**/*.ts", "controller/**/*.ts", "config/**/*.ts", "entities/**/*.ts", "middleware/**/*.ts", "repository/**/*.ts", "routes/**/*.ts"],
  "exclude": ["node_modules"]
}
